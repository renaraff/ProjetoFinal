@model ProjetoFinal.Models.Cidade

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastre a cidade</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CidadeNome" class="control-label"></label>
                <input asp-for="CidadeNome" class="form-control" />
                <span asp-validation-for="CidadeNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoId" class="control-label"></label>
                <select asp-for="EstadoId" class ="form-control" asp-items="ViewBag.EstadoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
